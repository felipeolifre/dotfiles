# Use the server-provided last modification date, if available
remote-time

# Allow the connection to take 10 seconds before timing out
connect-timeout = 10

# Retry a few times when a transfer fails
retry = 3

# Retry on any error
retry-all-errors

# Resolve names to IPv4 addresses only (don't try IPv6)
ipv4

# Display transfer progress as a simple progress bar
progress-bar

# Automatically set the previous URL when it follows a Location: header
referer = ";auto"

# When used with -s, --silent, it makes curl show an error message if it fails
show-error

# Disguise as Chrome 89.0 on Windows 10
user-agent = "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/89.0.4389.90 Safari/537.36"